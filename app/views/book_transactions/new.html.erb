<!-- app/views/book_transactions/new.html.erb -->
<div class="container mx-auto px-4 py-6">
  <h1 class="text-2xl font-bold mb-6">Borrow New Book</h1>

  <%= form_with(model: @book_transaction, local: true, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |form| %>
    <% if @book_transaction.errors.any? %>
      <div class="mb-6 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold">Please correct the following errors:</strong>
        <ul>
          <% @book_transaction.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :book_master_id, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.collection_select :book_master_id, BookMaster.available, :id, :name, { prompt: "Select a Book" }, { class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" } %>
    </div>

    <div class="mb-4">
      <%= form.label :borrower_id, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.collection_select :borrower_id, Borrower.includes(:user).all, :id, :user_name, { prompt: "Select a Borrower" }, { class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" } %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "Borrow Book", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>
